
public class Ningen {
	public String name = null;
	public int age = 0;

	public Ningen(){}

	public Ningen(String name,int age){
		this.name = name;
		this.age = age;
	}
	public Ningen(String name){
		this.name=name;
		this.age=0;
	}

	public Ningen(int age){
		this.name="名前なし";
		this.age=0;
	}

	public Ningen(int age, String name){
		this.name = name;
		this.age = age;
	}

	public void talk(){
		System.out.println(this.name + "が話す");
	}
	public void walk(){
		System.out.println(this.name + "が歩く");
	}
	public void run(){
		System.out.println(this.name + "が走る");
	}



}
